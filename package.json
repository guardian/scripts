{
  "name": "@guardian/scripts",
  "version": "0.0.0",
  "description": "Like react-scripts but for the Guardian",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardian/scripts.git"
  },
  "bugs": {
    "url": "https://github.com/guardian/scripts/issues"
  },
  "homepage": "https://github.com/guardian/scripts#readme",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "bin": {
    "gu-scripts": "bin/gu-scripts"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/** --ext .ts --no-error-on-unmatched-pattern",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --passWithNoTests",
    "cli": "ts-node src/bin/index.ts"
  },
  "devDependencies": {
    "@guardian/eslint-config-typescript": "^2.0.0",
    "@guardian/prettier": "^2.1.5",
    "@types/jest": "^29.2.3",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "eslintConfig": {
    "extends": [
      "@guardian/eslint-config-typescript"
    ]
  },
  "prettier": "@guardian/prettier",
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
